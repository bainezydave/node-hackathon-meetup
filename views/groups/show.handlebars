<div class="banner">
  <div class="container">
    <h1 class="hero-banner-header">{{group.name}}</h1>
    <p>admins: {{group.admin.name}}</p>
  </div>
</div>
<div class="container">
  <div class="show-content">
    <div class="content-side">
      <div class="cont-side-img">
      </div>
      <div class="cont-details">
        <h1 class="hero-banner-header" style="font-size: 22pt;">Purpose</h1>
        <p style="margin-bottom: 20px;">
          {{group.purpose}}
        </p>
      </div>
    </div>
    <div class="location-side">
      <div class="group-events">
        <div class="e-index-cards">
          {{#each group.events}}
          <a href="/events/show/{{event._id}}">
            <div class="card index-card">
              <div class="e-index-card-img">
              </div>
              <div class="e-index-card-content">
                <h1 class="index-card-header">{{event.name}}</h1>
                <p>{{event.details}}</p>
                <p>{{event.time}}</p>
              </div>
            </div>
          {{/each}}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
